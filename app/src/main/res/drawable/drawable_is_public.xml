<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 填充颜色 -->
    <solid
        android:color="@color/white"/>

    <!-- android:width边框线条的宽度，特别地，用于直线时设置直线的粗细。 -->
    <stroke
        android:width="1dp"
        android:color="@color/gray"/>

    <!-- 圆角半径 -->
    <corners
        android:radius="7dp"/>

</shape>