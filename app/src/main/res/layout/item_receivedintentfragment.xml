<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/lin_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="16.5dp"
            android:layout_marginTop="19dp"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_dian"
                    android:layout_width="7.5dp"
                    android:layout_height="7.5dp"
                    android:layout_marginRight="5.5dp"
                    android:background="@drawable/zhaozhuangxiu_dian" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:maxLength="5"
                    android:text="一飞"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2015.12.12    14:12"
                    android:textColor="#6F6F6F"
                    android:textSize="10sp" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/btn_three_wk"
                    android:text="删除"
                    android:textColor="@drawable/text_three_wk" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_intent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="我对店铺装修有需求，请联系我。我对店铺装修有需求，请联系我。"
                android:textColor="#000000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9.5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_xingming"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="姓名：王明"
                    android:textColor="#6F6F6F"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机：13888888888"
                    android:textColor="#6F6F6F"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6.5dp"
                android:layout_marginTop="4.5dp"
                android:text="地址：江苏省南京市鼓楼区石头城6号1栋3单元201室"
                android:textColor="#6F6F6F"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F5F6FB" />

</LinearLayout>