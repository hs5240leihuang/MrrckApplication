<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floatTablayout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/tab_left"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="25.5dp"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="60dp"
            android:textColor="@color/clo_ff3499"
            android:textSize="14sp" />

        <View
            android:id="@+id/lineLeft"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="3.5dp"
            android:background="@color/clo_ff3499" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/arrowLeft"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="4.5dp"
            android:layout_marginRight="34.5dp"
            android:background="@drawable/triangle" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_right"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="60dp"
            android:textColor="@color/black_light"
            android:textSize="14sp" />

        <View
            android:id="@+id/lineRight"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="3.5dp"
            android:background="@color/clo_ff3499"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/rightIcon"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_marginLeft="4.5dp"
        android:background="@drawable/triangle"
        android:visibility="gone" />

</LinearLayout>