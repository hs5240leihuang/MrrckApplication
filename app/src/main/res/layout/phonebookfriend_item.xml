<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/alpha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e3e3e3"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@color/chat_common_guide_color"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_list_item_height"
        android:layout_below="@id/alpha"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/img_friend_avatar"
            style="@style/My.ImageView.Photo_Avatar"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/chat_default_user_avatar" />

        <TextView
            android:id="@+id/tv_friend_name"
            style="@style/My.TextView._Black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img_friend_avatar"
            android:singleLine="true"
            android:text="name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_nickname"
            style="@style/My.TextView._Black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_friend_avatar"
            android:singleLine="true"
            android:layout_below="@+id/tv_friend_name"
            android:text="name"
            android:textColor="#666666"
            android:textSize="16sp" />
        <Button
            android:id="@+id/tipBtn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="添加"
            android:textColor="@android:color/white"
            android:background="@drawable/category_tag_bg" />
    </RelativeLayout>


</RelativeLayout>