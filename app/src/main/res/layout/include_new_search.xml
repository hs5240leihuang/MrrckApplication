<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newsearchLL"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <com.meiku.dev.views.ClearEditText
            android:id="@+id/et_msg_search"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@color/bak_gray"
            android:clickable="true"
            android:imeOptions="actionSearch"
            android:padding="5dp"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="14sp" />
        <TextView 
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:drawablePadding="10dp"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/contact_fragment_icon_msg_search"/>
    </FrameLayout>

    <TextView
        android:id="@+id/cancel_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:background="@drawable/unenable_edittext_bg"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="取消"
        android:textColor="#ff5073"
        android:textSize="17sp"
        android:visibility="gone" />

</LinearLayout>