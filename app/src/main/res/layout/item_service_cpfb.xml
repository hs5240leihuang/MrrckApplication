<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/boardLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/services_item_height_fbcp" >

        <LinearLayout
            android:id="@+id/layout_addImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/id_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/layout_addImage"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/id_place"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_name"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/layout_addImage"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_tv3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_place"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/layout_addImage"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#999"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/id_fullImg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop" />
    </RelativeLayout>

</LinearLayout>