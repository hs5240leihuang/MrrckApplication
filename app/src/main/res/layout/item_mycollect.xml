<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/workImg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workImg"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right" >

        <TextView
            android:id="@+id/btnPinlun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ms_pinglun"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="#666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/btnzan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:drawableLeft="@drawable/ms_dianzan"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="#666"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/icon_weixuanzhong_circle" />

    <ImageView
        android:id="@+id/IV_righttop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:visibility="gone" />

</RelativeLayout>