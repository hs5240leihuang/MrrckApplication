<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardLayout"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:background="@drawable/whiteroundradio15"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp" >

        <LinearLayout
            android:id="@+id/card_headImg"
            android:layout_width="@dimen/avatar_size_in_session"
            android:layout_height="@dimen/avatar_size_in_session"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/card_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/card_Id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/clo_ff3499" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:background="@drawable/blackbottomroundradio15"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="个人名片"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>