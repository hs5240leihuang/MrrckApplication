<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:minHeight="50dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            android:id="@+id/view_red"
            android:layout_width="2dp"
            android:layout_height="13dp"
            android:layout_marginLeft="10dp"
            android:background="#FE4D78" />

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:ellipsize="end"
            android:ems="10"
            android:hint="点击输入标题  (如：产品介绍、使用详情等)"
            android:maxLength="100"
            android:padding="5dp"
            android:singleLine="true"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/activity_bg" >
    </View>

    <EditText
        android:id="@+id/editDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/radius_border_bg_grey"
        android:ems="10"
        android:gravity="top"
        android:hint="点击添加详细说明文字"
        android:inputType="textMultiLine"
        android:maxLength="1000"
        android:minLines="4"
        android:padding="5dp"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_Detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:maxLength="1000"
        android:padding="5dp"
        android:textColor="#666"
        android:textSize="14sp"
        android:visibility="gone" />

    <com.meiku.dev.views.MyGridView
        android:id="@+id/gridview_uploadpic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:fadingEdge="none"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="10dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#d6d5d9" >
    </View>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/edit"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_three_wk"
            android:gravity="center"
            android:padding="5dp"
            android:text="编辑"
            android:textColor="@drawable/text_three_wk"
            android:visibility="gone" />

        <Button
            android:id="@+id/delete"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_three_wk"
            android:gravity="center"
            android:padding="5dp"
            android:text="删除"
            android:textColor="@drawable/text_three_wk"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>