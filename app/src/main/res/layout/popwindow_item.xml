<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/pop_windows_background"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/sendCircle_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.meiku.dev.views.CircleImageView
                android:layout_width="@dimen/shortcut_width"
                android:layout_height="@dimen/shortcut_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1.0dip"

                android:src="@drawable/shortcut_one"
                android:visibility="visible"
                app:border_color="@color/white"
                app:border_width="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5.0dip"
                android:text="发动态"
                android:textColor="@color/gray"
                android:textSize="13.0dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/take_photos"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.meiku.dev.views.CircleImageView
                android:layout_width="@dimen/shortcut_width"
                android:layout_height="@dimen/shortcut_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1.0dip"

                android:src="@drawable/shortcut_two"
                android:visibility="visible"
                app:border_color="@color/white"
                app:border_width="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5.0dip"
                android:text="拍照片"
                android:textColor="@color/gray"
                android:textSize="13.0dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/beat_video"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.meiku.dev.views.CircleImageView
                android:layout_width="@dimen/shortcut_width"
                android:layout_height="@dimen/shortcut_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1.0dip"
                android:src="@drawable/shortcut_three"
                android:visibility="visible"

                app:border_color="@color/white"
                app:border_width="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5.0dip"
                android:text="拍视频"
                android:textColor="@color/gray"
                android:textSize="13.0dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sound_recording"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.meiku.dev.views.CircleImageView
                android:layout_width="@dimen/shortcut_width"
                android:layout_height="@dimen/shortcut_height"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1.0dip"

                android:src="@drawable/shortcut_four"
                android:visibility="visible"
                app:border_color="@color/white"
                app:border_width="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5.0dip"
                android:text="录音"
                android:textColor="@color/gray"
                android:textSize="13.0dip" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>