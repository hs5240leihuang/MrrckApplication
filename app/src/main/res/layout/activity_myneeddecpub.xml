<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.meiku.dev.views.TopTitleBar
        xmlns:wk="http://schemas.android.com/apk/res/com.meiku.dev"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        wk:center_txt_title="发布装修需求"
        wk:left_res_title="@drawable/back" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/activity_bg" />

    <TextView
        android:id="@+id/topTip"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:alpha="0.6"
        android:background="#ff3499"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout style="@style/dec_open_layout" >

                    <TextView
                        style="@style/dec_open_textview"
                        android:text="需求主题" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="13dp"
                        android:background="#FE4D78" />

                    <EditText
                        android:id="@+id/et_theme"
                        style="@style/dec_open_textview"
                        android:layout_width="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入"
                        android:maxLength="16"
                        android:textColorHint="#aaaaaa" />

                    <TextView
                        style="@style/dec_open_textview"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="16字之内"
                        android:textColor="#aaaaaa" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#d6d5d9" />

                <LinearLayout style="@style/dec_open_layout" >

                    <TextView
                        style="@style/dec_open_textview"
                        android:text="店铺类型" />

                    <TextView
                        android:id="@+id/tv_shopType"
                        style="@style/dec_open_textview"
                        android:layout_width="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:hint="请选择"
                        android:textColorHint="#aaaaaa" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/decoration_down" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#d6d5d9" />

                <LinearLayout style="@style/dec_open_layout" >

                    <TextView
                        style="@style/dec_open_textview"
                        android:text="面积" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="13dp"
                        android:background="#FE4D78" />

                    <EditText
                        android:id="@+id/et_size"
                        style="@style/dec_open_textview"
                        android:layout_width="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入"
                        android:inputType="number"
                        android:maxLength="6"
                        android:textColorHint="#aaaaaa" />

                    <TextView
                        style="@style/dec_open_textview"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="㎡"
                        android:textColor="#aaaaaa" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#d6d5d9" />

                <LinearLayout style="@style/dec_open_layout" >

                    <TextView
                        style="@style/dec_open_textview"
                        android:text="装修时间" />

                    <TextView
                        android:id="@+id/tv_decTime"
                        style="@style/dec_open_textview"
                        android:layout_width="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:hint="请选择"
                        android:textColorHint="#aaaaaa" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/decoration_down" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#d6d5d9" />

                <LinearLayout style="@style/dec_open_layout" >

                    <TextView
                        style="@style/dec_open_textview"
                        android:text="费用预算" />

                    <TextView
                        android:id="@+id/tv_yusuanMoney"
                        style="@style/dec_open_textview"
                        android:layout_width="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:hint="请选择"
                        android:textColorHint="#aaaaaa" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/decoration_down" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#F5F6FB" />

                <LinearLayout style="@style/dec_open_layout" >

                    <TextView
                        style="@style/dec_open_textview"
                        android:text="所在城市" />

                    <TextView
                        android:id="@+id/tv_city"
                        style="@style/dec_open_textview"
                        android:layout_width="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:hint="请选择"
                        android:textColorHint="#aaaaaa" />

                    <ImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="12dp"
                        android:src="@drawable/decoration_down" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#d6d5d9" />

                <LinearLayout style="@style/dec_open_layout" >

                    <TextView
                        style="@style/dec_open_textview"
                        android:text="您的姓名" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="13dp"
                        android:background="#FE4D78" />

                    <EditText
                        android:id="@+id/et_name"
                        style="@style/dec_open_textview"
                        android:layout_width="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入"
                        android:textColorHint="#aaaaaa" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#d6d5d9" />

                <LinearLayout style="@style/dec_open_layout" >

                    <TextView
                        style="@style/dec_open_textview"
                        android:text="手机号" />

                    <View
                        android:layout_width="2dp"
                        android:layout_height="13dp"
                        android:background="#FE4D78" />

                    <EditText
                        android:id="@+id/et_phone"
                        style="@style/dec_open_textview"
                        android:layout_width="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textColorHint="#aaaaaa" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#F5F6FB" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="horizontal" >

                    <com.meiku.dev.views.MyGridView
                        android:id="@+id/gridview_uploadpic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8dp"
                        android:fadingEdge="none"
                        android:horizontalSpacing="5dp"
                        android:numColumns="3"
                        android:scrollbars="none"
                        android:verticalSpacing="10dp" />

                    <TextView
                        android:id="@+id/tv_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:text="图片格式：GIF、JPEG、PNG、\n最多可上传6张"
                        android:textColor="#AAAAAA"
                        android:textSize="12sp" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="13.5dp"
                    android:text="上传店面平面图或照片"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/layout_xieyi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/img_xieyi"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="23dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/zhaozhuangxiuxieyi1" />

                    <TextView
                        android:id="@+id/tv_xieyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_kefu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="34dp"
                    android:drawableLeft="@drawable/kefu"
                    android:drawablePadding="4.5dp"
                    android:gravity="center_vertical"
                    android:text="客服电话  400-688-6800"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/new_ok"
                    android:text="确定"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</LinearLayout>