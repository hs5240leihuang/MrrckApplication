<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/boardLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/services_item_height_tbh"
        android:background="@color/white"
        android:padding="2dp" >

        <LinearLayout
            android:id="@+id/layout_addImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_margin="8dp"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/id_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_toLeftOf="@+id/layout_addImage"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/id_people"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_name"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/layout_addImage"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#999"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/id_fullImg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY" />
    </RelativeLayout>

</LinearLayout>