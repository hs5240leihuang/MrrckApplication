<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.meiku.dev.views.TopTitleBar
        xmlns:wk="http://schemas.android.com/apk/res/com.meiku.dev"
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/white"
        wk:center_txt_title="验证信息"
        wk:left_res_title="@drawable/back"
        wk:right_txt_title="发送" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d5d6d9" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="#EFEFF4"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="个人介绍"
        android:textColor="#666666"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="100dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp" >

        <LinearLayout
            android:id="@+id/layout_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:orientation="horizontal" />

        <EditText
            android:id="@+id/edit_msg"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/white"
            android:gravity="top|left"
            android:paddingLeft="2dp"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EFEFF4"
        android:paddingLeft="15dp"
        android:paddingTop="12dp"
        android:text="加群成功后，个人介绍将展示给群友。"
        android:textColor="#666666"
        android:textSize="14sp" />

</LinearLayout>